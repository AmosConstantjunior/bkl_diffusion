{% extends 'base.html.twig' %}

{% block title %}Model
{% endblock %}

{% block body %}
	<h1 class='mt-4 mb-4' style='text-align:center'>Model</h1>
	<a class="btn btn-secondary  mt-2 ml-4 mb-3" href="{{ path('model_index') }}">Retour</a>
