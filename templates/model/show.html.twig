					</g>
					<defs>
						<clipPath id="clip0">
							<rect width="24" height="22" fill="white"/>
						</clipPath>
					</defs>
				</svg>
				Modifier</a>
			{{ include('model/_delete_form.html.twig') }}

		</div>
	</div>
	<section class="container-fluid">


		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ model.id }}</td>
				</tr>
				<tr>
					<th>Nom Model</th>
					<td>{{ model.NomModel }}</td>
				</tr>
				<tr>
					<th>Marque</th>
					<td>{{ model.marque }}</td>
				</tr>
			</tbody>
		</table>

<h4>Les machine de la désignation Type</h4>
		<a type="button" class="form-control col-md-7 mt-4" data-toggle="collapse" data-target="#demo">Les machines</a>
		<div id="demo" class="collapse overflow-auto h-50">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Numéro de série</th>
							<th>Version Eprom</th>
						</tr>
					</thead>
					<tbody>
			{% for machine in model.modeler %}
						<tr>
							<td>{{machine.NumSerie}}</td>
							<td>{{machine.VersionEprom}}</td>
						</tr>
			{% endfor %}
					</tbody>
				</table>
		</div>

	</section>
{% endblock %}
