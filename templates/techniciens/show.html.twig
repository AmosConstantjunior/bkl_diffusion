{% extends 'base.html.twig' %}

{% block title %}Techniciens{% endblock %}

{% block body %}
    <h1>Techniciens</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ technicien.id }}</td>
            </tr>
            <tr>
                <th>Nom du technicien</th>
                <td>{{ technicien.NomTechnicien }}</td>
            </tr>
            <tr>
                <th>Prenom du technicien</th>
                <td>{{ technicien.PrenomTechnicien }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ technicien.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ technicien.roles ? technicien.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ technicien.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('techniciens_index') }}">Retour</a>

    <a href="{{ path('techniciens_edit', {'id': technicien.id}) }}">Editer</a>

    {{ include('techniciens/_delete_form.html.twig') }}
{% endblock %}
