		</div>
		<div class="table-responsive">


			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Id</th>
						<th scope="col">Date</th>
						<th scope="col">Atelier</th>
						<th scope="col">Note CQS</th>
					</tr>
				</thead>
				<tbody>
					{% if app.user %}
						{% for atelier in app.user.ateliers %}
							{% for attestation in atelier.attester %}
								<tr>
									<th scope="row">{{attestation.id}}</th>
									<td>{{attestation.Date ? attestation.Date|date("d-m-Y")}}</td>
									<td>{{attestation.atelier}}</td>
									<td>{{attestation.TotalPoints}}
										%</td>
								</tr>
							{% endfor %}
						{% else %}
							<tr>
								<td>Ash</td>
							</tr>


						{% endfor %}

