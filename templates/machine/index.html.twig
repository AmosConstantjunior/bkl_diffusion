{% extends 'base.html.twig' %}

{% block title %}Machine index
{% endblock %}

{% block body %}
	<h1 class="mt-3 mb-2 " style="text-align:center">Liste des machines
	</h1>
	<a href="{{path('marque_index')}}" class="btn btn-info mr-4 mt-1 mb-4 float-right">Les marques</a>
    <a class="btn btn-info  float-right mr-3 mt-1 mb-4" href="{{ path('machine_new') }}">Nouvelle machine</a>
	
	<div class="container-fluid overflow-auto h-75">


		<table  class="table table-striped w-100 mt-3  ">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Numéro de série</th>
					<th scope="col">VersionEprom</th>
					<th scope="col">Model</th>
					{# <th>ProchaineIntervention</th> #}
					<th scope="col">action</th>
				</tr>
			</thead>
			<tbody>
				{% for machine in machines %}
					<tr>
						<td>{{ machine.id }}</td>
						<td>{{ machine.NumSerie }}</td>
						<td>{{ machine.VersionEprom }}</td>
						<td>{{machine.model}}</td>
						<td>
							{# <a href="{{ path('machine_show', {'id': machine.id}) }}">show</a> #}
							<a href="{{ path('machine_edit', {'id': machine.id}) }}">edit</a> 
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		
	</div>
	
{% endblock %}
