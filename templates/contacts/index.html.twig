{% extends 'base.html.twig' %}

{% block title %}Contacts index{% endblock %}

{% block body %}

    <h1>Contacts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomContact</th>
                <th>PrenomContact</th>
                <th>Poste</th>
                <th>TelContact</th>
                <th>EmailContact</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.NomContact }}</td>
                <td>{{ contact.PrenomContact }}</td>
                <td>{{ contact.Poste }}</td>
                <td>{{ contact.TelContact }}</td>
                <td>{{ contact.EmailContact }}</td>
                <td>
                    <a href="{{ path('contacts_show', {'id': contact.id}) }}">show</a>
                    <a href="{{ path('contacts_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contacts_new') }}">Create new</a>


{% endblock %}
